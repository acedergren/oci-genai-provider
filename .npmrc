# =============================================================================
# pnpm Configuration
# =============================================================================
# This file configures pnpm behavior for the OpenCode OCI GenAI monorepo.
# Settings optimize for performance, reliability, and consistent dependency
# resolution across the workspace.

# =============================================================================
# Package Registry
# =============================================================================
# GitHub Packages registry for @acedergren scoped packages
@acedergren:registry=https://npm.pkg.github.com

# =============================================================================
# Performance Optimizations
# =============================================================================
# Hoist dependencies to workspace root for faster resolution and smaller disk usage
shamefully-hoist=true

# Increase concurrent network requests for faster parallel downloads
network-concurrency=16

# Configure retry behavior for network reliability
fetch-retries=3
fetch-retry-mintimeout=2000
fetch-retry-maxtimeout=60000

# =============================================================================
# Dependency Resolution
# =============================================================================
# Automatically install peer dependencies when possible
auto-install-peers=true

# Allow flexible peer dependency resolution (recommended for monorepos)
strict-peer-dependencies=false

# =============================================================================
# Storage & Caching
# =============================================================================
# Central pnpm store location for shared package cache
store-dir=~/.pnpm-store
