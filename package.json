{
  "name": "oci-genai-provider",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for OCI Generative AI integrations",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:examples": "turbo run build --filter='./examples/*'",
    "test": "turbo run test",
    "test:packages": "turbo run test --filter='./packages/*'",
    "test:examples": "turbo run test --filter='./examples/*'",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "turbo run type-check",
    "validate:packages": "vitest run scripts/validate-packages.test.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:packages": "turbo run clean --filter='./packages/*'",
    "clean:examples": "turbo run clean --filter='./examples/*'",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acedergren/oci-genai-provider.git"
  },
  "keywords": [
    "oci",
    "oracle-cloud",
    "generative-ai",
    "opencode",
    "ai",
    "llm",
    "monorepo"
  ],
  "author": "Alexander Cedergren <alexander.cedergren@oracle.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.6",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md}": [
      "npx prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "ai": "^6.0.57"
  }
}
