      "npm": "@acedergren/opencode-oci-genai",
      "name": "OCI GenAI",
      "options": {
        "compartmentId": "{env:OCI_COMPARTMENT_ID}",
        "configProfile": "{env:OCI_CONFIG_PROFILE}"
      },
      "models": {
        "xai.grok-4": {
          "name": "Grok 4",
          "limit": { "context": 131072, "output": 8192 }
