{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**", ".next/**", "build/**", "!.next/cache/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsup.config.ts", "vite.config.ts", "svelte.config.js"],
      "cache": true
    },
    "test": {
      // Removed build dependency - tests can run in parallel with build for faster iteration
      "dependsOn": [],
      "cache": true,
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "vitest.config.ts", "package.json"]
    },
    "test:coverage": {
      // Removed build dependency - tests can run in parallel with build
      "dependsOn": [],
      "cache": true,
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "vitest.config.ts", "package.json"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      // Removed ^build dependency - linting doesn't need built artifacts
      "dependsOn": [],
      "cache": true,
      "outputs": [],
      "inputs": ["src/**", ".eslintrc.js", ".eslintrc.json", ".eslintignore", "package.json"]
    },
    "lint:fix": {
      // Removed ^build dependency - linting doesn't need built artifacts
      "dependsOn": [],
      "cache": false,
      "outputs": [],
      "inputs": ["src/**", ".eslintrc.js", ".eslintrc.json", ".eslintignore", "package.json"]
    },
    "type-check": {
      // Keep ^build dependency - type-checking needs types from dependencies
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": [],
      "inputs": ["src/**", "tsconfig.json", "package.json"]
    },
    "format": {
      "cache": false,
      "outputs": [],
      "inputs": ["src/**", ".prettierrc", ".prettierignore", "package.json"]
    },
    "format:check": {
      "cache": true,
      "outputs": [],
      "inputs": ["src/**", ".prettierrc", ".prettierignore", "package.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    ".env",
    "tsconfig.json",
    "turbo.json",
    "package.json",
    ".npmrc"
  ],
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "OCI_COMPARTMENT_ID",
    "OCI_REGION",
    "OCI_CONFIG_PROFILE"
  ]
}
